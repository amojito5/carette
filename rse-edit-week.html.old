<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier mes trajets - Carette RSE</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 32px;
        }
        
        .header h1 {
            font-size: 36px;
            font-weight: 900;
            margin-bottom: 8px;
        }
        
        .header p {
            font-size: 16px;
            opacity: 0.9;
        }
        
        .card {
            background: white;
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            margin-bottom: 20px;
        }
        
        .week-title {
            font-size: 18px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .days-grid {
            display: grid;
            gap: 20px;
        }
        
        .day-row {
            background: #f9fafb;
            border-radius: 12px;
            padding: 20px;
            border: 2px solid #e5e7eb;
            transition: all 0.3s ease;
        }
        
        .day-row:hover {
            border-color: #667eea;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
        }
        
        .day-header {
            font-size: 16px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .day-date {
            font-size: 13px;
            color: #6b7280;
            font-weight: 400;
        }
        
        .transport-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
        }
        
        .transport-info {
            flex: 1;
        }
        
        .transport-label {
            font-size: 13px;
            font-weight: 600;
            color: #374151;
            margin-bottom: 4px;
        }
        
        .distance-info {
            font-size: 12px;
            color: #9ca3af;
        }
        
        .transport-button {
            background: white;
            border: 3px solid #667eea;
            border-radius: 16px;
            padding: 20px 24px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            min-width: 140px;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.15);
        }
        
        .transport-button:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
        }
        
        .transport-button:active {
            transform: scale(0.98);
        }
        
        .transport-button .emoji {
            font-size: 48px;
            line-height: 1;
        }
        
        .transport-button .name {
            font-size: 14px;
            font-weight: 600;
            color: #1f2937;
            text-align: center;
        }
        
        .transport-button .hint {
            font-size: 11px;
            color: #9ca3af;
            text-align: center;
        }
        
        .transport-icon {
            font-size: 28px;
            margin-bottom: 4px;
        }
        
        .transport-name {
            font-size: 11px;
            font-weight: 600;
            color: #374151;
        }
        
        .action-buttons {
            display: flex;
            gap: 12px;
            margin-top: 32px;
        }
        
        .btn {
            flex: 1;
            padding: 16px 24px;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: block;
        }
        
        .btn-primary {
            background: #10b981;
            color: white;
            box-shadow: 0 4px 14px rgba(16, 185, 129, 0.4);
        }
        
        .btn-primary:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
        }
        
        .btn-secondary {
            background: #f3f4f6;
            color: #374151;
            border: 2px solid #e5e7eb;
        }
        
        .btn-secondary:hover {
            background: #e5e7eb;
        }
        
        .co2-summary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 24px;
            text-align: center;
            color: white;
            margin-bottom: 20px;
        }
        
        .co2-value {
            font-size: 48px;
            font-weight: 900;
            margin-bottom: 4px;
        }
        
        .co2-label {
            font-size: 14px;
            opacity: 0.9;
        }
        
        .success-message {
            background: #d1fae5;
            border: 2px solid #10b981;
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            display: none;
            text-align: center;
        }
        
        .success-message.show {
            display: block;
            animation: slideIn 0.5s ease;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üå± Modifier mes trajets</h1>
            <p>Ajustez vos d√©placements de la semaine avant validation</p>
        </div>
        
        <div class="card">
            <div class="week-title">
                <span>üìÖ</span>
                <span id="week-range">Semaine du ...</span>
            </div>
            
            <div id="days-container" class="days-grid">
                <!-- Les jours seront g√©n√©r√©s dynamiquement -->
            </div>
            
            <div class="co2-summary" style="margin-top: 30px;">
                <div class="co2-value" id="total-co2">0 kg</div>
                <div class="co2-label">√âmissions CO‚ÇÇ totales de la semaine</div>
            </div>
            
            <div style="background: #fef3c7; border-radius: 12px; padding: 20px; margin-bottom: 20px; border-left: 4px solid #f59e0b;">
                <label style="display: flex; align-items: center; cursor: pointer; margin: 0;">
                    <input type="checkbox" id="save-as-habits" style="width: 20px; height: 20px; margin-right: 12px; cursor: pointer;">
                    <span style="font-size: 15px; color: #92400e; font-weight: 500;">
                        üíæ Enregistrer ces trajets comme mes nouvelles habitudes par d√©faut
                    </span>
                </label>
                <p style="margin: 12px 0 0 32px; font-size: 13px; color: #92400e; line-height: 1.5;">
                    Si vous cochez cette case, vos prochaines semaines utiliseront automatiquement ces moyens de transport.
                </p>
            </div>
            
            <div class="action-buttons">
                <button class="btn btn-primary" onclick="saveAndValidate()">
                    ‚úÖ Valider mes trajets
                </button>
                <a href="mailto:support@carette.fr" class="btn btn-secondary">
                    ‚úâÔ∏è Contacter le support
                </a>
            </div>
            
            <div id="success-message" class="success-message">
                <div style="font-size: 48px; margin-bottom: 12px;">‚úì</div>
                <div style="font-size: 18px; font-weight: 700; color: #065f46; margin-bottom: 8px;">
                    Trajets valid√©s avec succ√®s !
                </div>
                <div style="font-size: 14px; color: #047857;">
                    Vos donn√©es ont √©t√© enregistr√©es. Rendez-vous vendredi prochain !
                </div>
            </div>
        </div>
        
        <div class="co2-summary">
            <div class="co2-value" id="total-co2">0.0 kg</div>
            <div class="co2-label">CO‚ÇÇ √©mis cette semaine</div>
        </div>
    </div>
    
    <script>
        // Configuration des transports
        const transports = {
            voiture_solo: { icon: 'üöó', name: 'Voiture solo', co2: 0.220 },
            transports_commun: { icon: 'üöå', name: 'Transports', co2: 0.050 },
            covoiturage: { icon: 'üöóüë•', name: 'Covoiturage', co2: 0.055 },
            velo: { icon: 'üö¥', name: 'V√©lo', co2: 0.000 },
            train: { icon: 'üöÑ', name: 'Train', co2: 0.025 },
            teletravail: { icon: 'üè†', name: 'T√©l√©travail', co2: 0.000 },
            marche: { icon: 'üö∂', name: 'Marche', co2: 0.000 },
            absent: { icon: '‚úñÔ∏è', name: 'Absent', co2: 0.000 }
        };
        
        // Donn√©es de la semaine (charg√©es depuis l'API)
        let weekData = null;
        let apiToken = null;
        
        // Initialisation
        async function init() {
            // Charger le token depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            apiToken = urlParams.get('token');
            
            if (!apiToken) {
                alert('Token manquant. Utilisez le lien depuis votre email.');
                return;
            }
            
            // Charger les donn√©es depuis l'API
            try {
                const response = await fetch(`/api/v2/rse/weekly-data/${apiToken}`);
                
                if (!response.ok) {
                    throw new Error('Impossible de charger les donn√©es');
                }
                
                weekData = await response.json();
                
                if (weekData.confirmed) {
                    // Afficher un message si d√©j√† confirm√©
                    document.querySelector('.container').innerHTML = `
                        <div class="card" style="text-align: center; padding: 60px 32px;">
                            <div style="font-size: 64px; margin-bottom: 20px;">‚úì</div>
                            <h1 style="color: #1f2937; font-size: 28px; margin-bottom: 16px;">
                                D√©j√† valid√©
                            </h1>
                            <p style="color: #6b7280; font-size: 16px;">
                                Vous avez d√©j√† confirm√© vos trajets pour cette semaine.
                            </p>
                        </div>
                    `;
                    return;
                }
                
                // Afficher la p√©riode
                document.getElementById('week-range').textContent = 
                    `Semaine du ${formatDate(weekData.week_start)} au ${formatDate(weekData.week_end)}`;
                
                // G√©n√©rer les jours
                renderDays();
                
                // Calculer le CO2 initial
                updateCO2();
                
            } catch (error) {
                console.error('Erreur chargement:', error);
                alert('Impossible de charger vos donn√©es. Veuillez r√©essayer plus tard.');
            }
        }
        
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            return date.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit' });
        }
        
        function renderDays() {
            const container = document.getElementById('days-container');
            container.innerHTML = '';
            
            weekData.days.forEach((day, index) => {
                const dayDiv = document.createElement('div');
                dayDiv.className = 'day-row';
                dayDiv.innerHTML = `
                    <div class="day-header">
                        <span>${day.day_name}</span>
                        <span class="day-date">${formatDate(day.date)}</span>
                    </div>
                    
                    <div class="transport-section">
                        <label class="transport-label">ÔøΩ Transport (aller-retour)</label>
                        <div class="transport-grid">
                            ${Object.keys(transports).map(key => `
                                <div class="transport-option">
                                    <input type="radio" 
                                           name="day${index}-transport" 
                                           id="day${index}-transport-${key}" 
                                           value="${key}"
                                           ${day.transport_mode === key ? 'checked' : ''}
                                           onchange="updateCO2()">
                                    <label for="day${index}-transport-${key}">
                                        <div class="transport-icon">${transports[key].icon}</div>
                                        <div class="transport-name">${transports[key].name}</div>
                                    </label>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                container.appendChild(dayDiv);
            });
        }
        
        function updateCO2() {
            let totalCO2 = 0;
            const distance = weekData.distance_km;
            
            weekData.days.forEach((day, index) => {
                const transportRadio = document.querySelector(`input[name="day${index}-transport"]:checked`);
                
                if (transportRadio) {
                    const transportCO2 = transports[transportRadio.value].co2;
                    totalCO2 += transportCO2 * distance * 2;  // Aller-retour
                }
            });
            
            document.getElementById('total-co2').textContent = `${totalCO2.toFixed(1)} kg`;
        }
        
        async function saveAndValidate() {
            if (!weekData || !apiToken) {
                alert('Donn√©es manquantes');
                return;
            }
            
            // D√©sactiver le bouton pendant la sauvegarde
            const saveBtn = document.querySelector('.btn-primary');
            saveBtn.disabled = true;
            saveBtn.textContent = '‚è≥ Sauvegarde en cours...';
            
            // R√©cup√©rer les donn√©es modifi√©es
            const updatedDays = weekData.days.map((day, index) => {
                const transportRadio = document.querySelector(`input[name="day${index}-transport"]:checked`);
                
                return {
                    date: day.date,
                    day_name: day.day_name,
                    transport_mode: transportRadio ? transportRadio.value : 'voiture_solo'
                };
            });
            
            // R√©cup√©rer l'√©tat de la checkbox "sauvegarder comme habitudes"
            const saveAsHabits = document.getElementById('save-as-habits')?.checked || false;
            
            try {
                // Sauvegarder via l'API
                const saveResponse = await fetch(`/api/v2/rse/weekly-data/${apiToken}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        days: updatedDays,
                        save_as_habits: saveAsHabits  // Nouveau param√®tre
                    })
                });
                
                if (!saveResponse.ok) {
                    throw new Error('Erreur de sauvegarde');
                }
                
                const saveResult = await saveResponse.json();
                console.log('Donn√©es sauvegard√©es:', saveResult);
                
                // Confirmer les trajets
                window.location.href = `/api/v2/rse/weekly-confirm?token=${apiToken}`;
                
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la sauvegarde. Veuillez r√©essayer.');
                saveBtn.disabled = false;
                saveBtn.textContent = '‚úÖ Valider mes trajets';
            }
        }
        
        // Lancer l'initialisation au chargement
        init();
    </script>
</body>
</html>
