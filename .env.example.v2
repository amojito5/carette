# ============================================
# CARETTE v2 - Configuration Simplifiée
# ============================================

# Base de données MySQL
CARETTE_DB_NAME=carette_db
CARETTE_DB_HOST=localhost
CARETTE_DB_USER=carette_user
CARETTE_DB_PASSWORD=VOTRE_MOT_DE_PASSE_SECURISE_ICI
CARETTE_DB_ROOT_PASSWORD=VOTRE_MOT_DE_PASSE_ROOT_ICI

# Flask
SECRET_KEY=GENEREZ_UNE_CLE_SECRETE_AVEC_generate_secrets.py
FLASK_ENV=development

# CORS (origines autorisées, séparées par virgules)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5000

# Email SMTP (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
FROM_EMAIL=noreply@carette.app

# URL de base pour les liens de confirmation
BASE_URL=http://localhost:8080

# WhatsApp (true/false)
WHATSAPP_ENABLED=true

# Rate limiting (Redis en production, memory en dev)
REDIS_URL=memory://

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Copiez ce fichier vers .env
# 2. Générez des secrets : python3 backend/generate_secrets.py
# 3. Configurez vos identifiants SMTP
# 4. Initialisez la base : python3 backend/sql_v2.py
# 5. Lancez l'API : python3 backend/api_v2.py
