# ===============================================
# Configuration Carette - Variables d'environnement
# ===============================================
# IMPORTANT: Copier ce fichier en '.env' et remplir avec vos vraies valeurs
# Ne JAMAIS commiter le fichier .env dans Git !

# Base de données MySQL
CARETTE_DB_NAME=carette_db
CARETTE_DB_HOST=localhost
CARETTE_DB_USER=carette_user
CARETTE_DB_PASSWORD=
CARETTE_DB_ROOT_PASSWORD=

# Sécurité (générer avec: python3 -c "import secrets; print(secrets.token_hex(32))")
CARETTE_SECRET_KEY=
JWT_SECRET_KEY=

# API externes (OpenRouteService - optionnel)
ORS_API_KEY=

# Configuration serveur
CARETTE_DEBUG=False
CARETTE_API_PORT=5001
CARETTE_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Rate limiting (Redis recommandé en production, sinon memory://)
REDIS_URL=redis://localhost:6379/0
